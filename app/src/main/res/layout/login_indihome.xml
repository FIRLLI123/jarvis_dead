<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#F1F2F3"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:gravity="left">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:text="LOGIN"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:background="@drawable/indihome"/>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="right">




            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lingkaran_biru" />

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="-35dp"
                android:background="@drawable/lingkaran_biru" />

        </LinearLayout>



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">




        <LinearLayout
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="right"
            android:gravity="right">


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/wa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Center"
                android:gravity="right"
                android:textSize="11dp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#FFFFFF">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#FFFFFF"

                >



                <TextView
                    android:id="@+id/namasales"
                    android:text="null"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/merah"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/update"
                    android:text="null"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/merah"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textSize="13dp"
                    android:focusable="true"
                    android:layout_margin="10dp"
                    android:padding="8dp"
                    android:hint="ID"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:background="@drawable/background"/>


                <EditText
                    android:id="@+id/password"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:textSize="13dp"
                    android:layout_margin="10dp"
                    android:hint="PASSWORD"
                    android:padding="8dp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:background="@drawable/background"/>

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lupa Password Silahkan Hub Admin"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:visibility="gone"/>







            </LinearLayout>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">


            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="bottom"
                android:background="@drawable/lingkaran_biru" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="bottom"
                android:background="@drawable/lingkaran_biru" />



            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:id="@+id/Button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="-50dp"
                android:background="@drawable/kiri_kanan_round"
                >

                <TextView
                    android:gravity="left"
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOGIN"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>



            </LinearLayout>



        </LinearLayout>








        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginTop="100dp"
            android:gravity="left">

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-35dp"
                android:layout_gravity="bottom"
                android:background="@drawable/lingkaran_biru" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="bottom"
                android:background="@drawable/lingkaran_biru" />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="right"
    android:gravity="bottom|right">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="SIGN IN"
        android:layout_gravity="bottom"
        android:gravity="bottom|right"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"/>


</LinearLayout>







        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">


                <ImageView

                    android:layout_marginRight="1dp"
                    android:layout_gravity="bottom"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/browser"/>


                <ImageView
                    android:layout_marginRight="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="1dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/fb"/>

                <ImageView
                    android:layout_marginRight="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="1dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ig"/>






            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>





