<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">





<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp"
    android:background="@color/merahmudah2">


</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/namaitemlistsumstok2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher 2.5gb"
                android:textColor="@color/black"
                android:layout_marginLeft="1dp"
                android:gravity="left"
                android:textStyle="bold"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Code"
                android:textColor="@color/merah"
                android:layout_marginLeft="15dp"
                android:gravity="left"/>

            <TextView
                android:id="@+id/codelistsumstok2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/merah"
                android:layout_marginLeft="1dp"
                android:gravity="center" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Stok Tersedia"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:gravity="left"/>

            <TextView
                android:id="@+id/qtylistsumstok2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:layout_marginLeft="1dp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:visibility="gone">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="code"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:gravity="left"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:visibility="visible">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="harga"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:gravity="left"/>

            <TextView
                android:id="@+id/hargalistsumstok2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:layout_marginLeft="1dp"
                android:gravity="center" />




        </LinearLayout>


        <TextView
            android:id="@+id/kategori_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kategori"
            android:textColor="@color/black"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:visibility="gone"/>


    </LinearLayout>



</LinearLayout>


















