<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TesCoding"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Input Kilometer"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal :"
            android:textSize="15dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022/1/6"
            android:id="@+id/tanggal"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="Cari"
            android:id="@+id/carikm"
            android:background="@drawable/custom3"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"/>

        <AutoCompleteTextView
            android:id="@+id/edittext99"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="4dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="Cek"
            android:id="@+id/carikmawal"
            android:background="@drawable/custom3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Sales :"
            android:textSize="15dp"/>



        <EditText

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/namasaleslist"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:focusable="false"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cek Detail"
            android:id="@+id/cekdetail"/>

    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Kilometer Awal"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/kmawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:gravity="top"
        android:hint="Kilometer"
        android:padding="8dp"
        android:textColor="@color/black"
        android:inputType="number"
        android:textSize="13dp" />

    <Button
        android:id="@+id/inputkmawal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="INPUT KILOMETER AWAL"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:background="@drawable/custom2"
        android:layout_marginTop="5dp"/>

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Kilometer Akhir"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/kmakhir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:gravity="top"
            android:hint="Kilometer"
            android:padding="8dp"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="13dp" />

        <Button
            android:id="@+id/inputkm"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="INPUT"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:background="@drawable/custom2"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TOTAL MENEMPUH :"
    android:textSize="17dp"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/hasilkm"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KM"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ListView
                android:id="@+id/listinputperdana"
                android:layout_width="match_parent"
                android:layout_height="211dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>