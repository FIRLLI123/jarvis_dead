                android:visibility="gone"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/view_line_dotted"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
