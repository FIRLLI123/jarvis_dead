<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TesCoding"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SUMMARY TOTAL ITEM TEMPO"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/merah"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal :"
            android:textSize="15dp"
            android:textColor="@color/abutua"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/01/01"
            android:id="@+id/tanggaldari"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/abutua"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/01/31"
            android:id="@+id/tanggalsampai"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/abutua"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:text="Cari"
            android:id="@+id/cari"
            android:visibility="gone"
            android:layout_marginLeft="5dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:padding="4dp">


        <TextView
            android:id="@+id/keseluruhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KESELURUHAN"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/abutua"
            android:background="@drawable/custom10"/>



        <TextView
            android:id="@+id/tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMPO"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/custom10"/>



        <TextView
            android:id="@+id/sudahterbayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUDAH TERBAYAR"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/custom10"/>


    </LinearLayout>


    <TextView
        android:id="@+id/hasilpilihan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUDAH TERBAYAR"
        android:textSize="15dp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/custom10"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/hasilpilihan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUDAH TERBAYAR"
        android:textSize="15dp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/custom10"
        android:visibility="gone"/>







    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp">


        <ListView
            android:id="@+id/listitemtempo"
            android:layout_width="match_parent"
            android:layout_height="350dp" />

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Unit    :"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/ttl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pcs"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginLeft="1dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:visibility="gone">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Tempo    "
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/ttl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pcs"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:visibility="gone">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Sudah Terbayar    "
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/ttl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pcs"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="1dp"/>

    </LinearLayout>




    <Button
        android:id="@+id/btnsumtempooutlet"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="LIHAT DETAIL BERDASARKAN OUTLET"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/custom3"
        android:layout_marginTop="10dp"
        android:visibility="visible"/>

</LinearLayout>