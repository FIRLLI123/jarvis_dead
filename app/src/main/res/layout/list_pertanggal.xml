<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">





    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/listbulat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:background="@drawable/bulet_angka4"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">



            <TextView
                android:id="@+id/listnomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tanggallist"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="01-Juni-2024"
        android:padding="3dp"
        android:textColor="@color/merahtua"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/bintang"
        android:layout_marginRight="1dp"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/bintang"
        android:visibility="gone"/>

</LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tanggallisttest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:visibility="gone"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Total Kuantiti"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"/>


                <TextView
                    android:id="@+id/qtylist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:gravity="left"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Total Belanja"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"/>


            <TextView
                android:id="@+id/belanjalist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:gravity="left"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:gravity="left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Total Target"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"/>


                <TextView
                    android:id="@+id/total_target_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:gravity="left"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="ACH"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"/>


                <TextView
                    android:id="@+id/ach_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:gravity="left"/>

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

</LinearLayout>

    <View
        android:id="@+id/garisMerah"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/merah" />

</LinearLayout>


















