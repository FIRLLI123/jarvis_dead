<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/abutua">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            tools:context=".MainActivity"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Nama Sales"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:visibility="gone"
                    />





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"

                >



                <TextView
                    android:text="Nama user"
                    android:textSize="14dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:id="@+id/namauser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="8dp"
                    android:editable="false"
                    />


                <TextView
                    android:id="@+id/tanggalinputperdana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="19/10/2021"


                    />

                <TextView
                    android:id="@+id/idoutletinputperdana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="idoutlet"



                    />

                <TextView
                    android:id="@+id/namasalesinputperdana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="nama sales"



                    />

                <TextView
                    android:id="@+id/namaoutletinputperdana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="nama outlet"



                    />

                <TextView
                    android:id="@+id/jaminput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="09:00"


                    />
            </LinearLayout>




            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VALIDASI ORDER VOUCHER"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/custom2">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="7dp"
                        android:background="@color/abu">







                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alasan Tidak Order"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner">
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:id="@+id/spinner"
                                android:scrollbarSize="30dp"
                                android:spinnerMode="dialog"

                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="7dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >





                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/alasan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background2"
                                android:focusable="true"
                                android:gravity="top"
                                android:hint="Lainnya"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textSize="13dp"
                                android:inputType="text"

                                />

                            <EditText
                                android:id="@+id/orderatautidak"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background2"
                                android:focusable="true"
                                android:gravity="top"
                                android:hint="orderatautidak"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textSize="13dp"
                                android:inputType="number"
                                android:visibility="gone"

                                />
                            <EditText
                                android:id="@+id/validasi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background2"
                                android:focusable="true"
                                android:gravity="top"
                                android:hint="VALIDASI 1"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textSize="13dp"
                                android:inputType="number"
                                android:visibility="gone"


                                />

                            <EditText
                                android:id="@+id/validasib"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background2"
                                android:focusable="true"
                                android:gravity="top"
                                android:hint="VALIDASI 2"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textSize="13dp"
                                android:inputType="number"
                                android:visibility="gone"


                                />
                            <EditText
                                android:id="@+id/rekamitra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background2"
                                android:focusable="true"
                                android:gravity="top"
                                android:hint="VALIDASI 2"
                                android:text="https://rekamitrayasa.com/reka/images/"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textSize="13dp"
                                android:inputType="number"
                                android:visibility="gone"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                >

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/noimage"
                                    app:civ_border_color="#DFBBC4"
                                    app:civ_border_width="2dp"
                                    />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="10dp">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="*NOTE"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Gambar langsung di ambil dari kamera bukan dari galery."
                                        android:textSize="12dp"
                                        android:textColor="@color/black"/>

                                    <Button
                                        android:id="@+id/foto"
                                        android:layout_width="80dp"
                                        android:layout_height="30dp"
                                        android:text="mulai foto"
                                        android:textColor="@color/white"
                                        android:layout_gravity="left"
                                        android:textSize="10dp"
                                        android:layout_marginLeft="1dp"
                                        android:background="@drawable/choose"
                                        android:layout_marginTop="5dp"/>

                                </LinearLayout>




                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </ScrollView>
            </android.support.v7.widget.CardView>




            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/black"
                />


            <EditText
                android:id="@+id/iddelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="3"
                android:layout_marginLeft="30dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btninput"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:ellipsize="marquee"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:text="Tambah"
                    android:background="@drawable/custom4abu"/>



                <Button
                    android:id="@+id/btndelete"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:ellipsize="marquee"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:text="HAPUS"
                    android:background="@drawable/custom4abu"
                    android:layout_marginLeft="10dp"/>

                <Button
                    android:id="@+id/btnupdate"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:ellipsize="marquee"
                    android:textSize="10dp"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:background="@drawable/custom4abu"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnrefresh"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:ellipsize="marquee"
                    android:textSize="10dp"
                    android:textColorLink="@color/black"
                    android:text="REFRESH"
                    android:textColor="@color/white"
                    android:background="@drawable/custom4abu"
                    android:layout_marginLeft="10dp"/>





            </LinearLayout>

        </LinearLayout>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ListView
                    android:id="@+id/listinputperdana"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    tools:listfooter="@tools:sample/us_phones"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnorder"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:textColorLink="@color/black"
            android:text="ORDER"
            android:textColor="@color/white"
            android:background="@drawable/custom4abu"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            />



        <Button
            android:id="@+id/btnnext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="12dp"
            android:textColorLink="@color/black"
            android:text="Next Form input Link  >>"
            android:textColor="@color/white"
            android:background="@drawable/custom4abu"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>




</LinearLayout>