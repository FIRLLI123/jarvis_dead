<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TesCoding"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal :"
            android:textSize="20dp"
            android:textColor="@color/black"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022/1/6"
            android:id="@+id/tanggal"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Sales :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:visibility="gone"/>



        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIRLLI"
            android:id="@+id/namasaleslistsum2"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:focusable="false"
            android:gravity="center"
            android:textColor="@color/black"
            />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CETAK"
            android:id="@+id/cetak"
            android:background="@drawable/custom3"
            android:visibility="gone"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Outlet"
        android:id="@+id/namaoutletlist"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Outlet"
        android:id="@+id/idoutletlist"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="STOK SELISIH"
        android:id="@+id/sumitem"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@drawable/bstyle"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="KLIK RINCIAN"
            android:textSize="10dp"
            android:id="@+id/rincian"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:background="@drawable/login_button_bkk2"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"/>







    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <ListView
            android:id="@+id/listsum2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>



</LinearLayout>