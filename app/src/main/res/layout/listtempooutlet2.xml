        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/birumudabanget"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="ITEM"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="left" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="right" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/namaitemlisttempooutlet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perdana 35 GB (Segel)"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:background="@drawable/abubuletkopong"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="9dp"
                    android:id="@+id/icon"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/masihtempo"
                    android:visibility="gone"/>

                    <ImageView
                        android:layout_marginTop="9dp"
                        android:id="@+id/icon2"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ceklist"
                        android:visibility="gone"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Kuantiti"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="left" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="right" />


            <TextView
                android:layout_marginTop="1dp"
                android:id="@+id/qtylisttempooutlet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:gravity="center" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pcs"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Sales"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="left" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="13dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/namasaleslisttempooutlet2"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEMPO"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="center" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>




















