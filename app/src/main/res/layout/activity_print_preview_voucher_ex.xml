            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*NOTE"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wajib Melampirkan Bukti"
