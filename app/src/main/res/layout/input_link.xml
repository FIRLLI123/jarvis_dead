<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.barcode.Input"
    android:background="#F0F4F4">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".MainActivity"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nama Sales"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:visibility="gone"/>





        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:visibility="gone">



            <TextView
                android:text="Nama user"
                android:textSize="14dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/namauser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text=""
                android:layout_weight="1"
                android:editable="false"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tanggalinputlink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="19/10/2021"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/jaminput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="09:00"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/idoutletinputlink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="idoutlet"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/namasalesinputlink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="nama sales"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/namaoutletinputlink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:visibility="gone"
            />



        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INPUT SALDO LINK"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemlink"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:gravity="top"
                        android:text="SALDO LINK"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textSize="13dp" />


                    <EditText
                        android:id="@+id/link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/background"
                        android:focusable="true"
                        android:gravity="top"
                        android:hint="0"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        />




                </LinearLayout>

                <TextView
                    android:id="@+id/rp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:gravity="top"
                    android:text="0"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginLeft="110dp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/black"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btninput"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:ellipsize="marquee"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:text="Tambah"
                android:background="@drawable/custom4"/>

            <EditText
                android:id="@+id/iddelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="3"
                android:layout_marginLeft="30dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btndelete"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:ellipsize="marquee"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:text="HAPUS"
                android:background="@drawable/custom4"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/btnupdate"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:ellipsize="marquee"
                android:textSize="10dp"
                android:text="Edit"
                android:textColor="@color/white"
                android:background="@drawable/custom4"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/btnrefresh"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:ellipsize="marquee"
                android:textSize="10dp"
                android:textColorLink="@color/black"
                android:text="REFRESH"
                android:textColor="@color/white"
                android:background="@drawable/custom4"
                android:layout_marginLeft="10dp"/>





        </LinearLayout>

    </LinearLayout>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ListView
                android:id="@+id/listinputperdana"
                android:layout_width="match_parent"
                android:layout_height="211dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btncetak"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ellipsize="marquee"
        android:textSize="10dp"
        android:textColorLink="@color/black"
        android:text="CETAK"
        android:textColor="@color/white"
        android:background="@drawable/custom2"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_gravity="center"/>


</LinearLayout>
