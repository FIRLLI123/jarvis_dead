<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">










<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="right">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/namaoutletlistbayartempo"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="ABC CELL"
            android:textColor="@color/black"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klik Untuk Bayar >"
        android:textColor="@color/merah"
        android:layout_marginLeft="1dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:layout_marginRight="9dp"
        android:visibility="gone"/>




</LinearLayout>


        <TextView
            android:id="@+id/idpenjualanlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textColor="@color/black"
            android:layout_marginLeft="3dp"
            android:gravity="left"
            android:textStyle="bold"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/birumudabanget"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:text="ITEM"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="left" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="right" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/namaitemlistbayartempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perdana 35 GB (Segel)"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:background="@drawable/abubuletkopong"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="9dp"
                    android:id="@+id/icon"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/masihtempo"
                    android:visibility="gone"/>

                    <ImageView
                        android:layout_marginTop="9dp"
                        android:id="@+id/icon2"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ceklist"
                        android:visibility="gone"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:text="Kuantiti"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="left" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="right" />


            <TextView
                android:layout_marginTop="1dp"
                android:id="@+id/qtylistbayartempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:gravity="center" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pcs"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="left" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="13dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="1dp"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/ket"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEMPO"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:gravity="center" />


                <TextView
                    android:id="@+id/tanggallistbayartempo"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textStyle="bold"
                    android:textColor="@color/merah"
                    android:layout_marginLeft="15dp"
                    android:gravity="right"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>




















