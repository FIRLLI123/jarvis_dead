<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="6dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView

                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Nomor"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/merahmuda"
                android:gravity="center"

                />


            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/merahmuda"
                android:layout_marginLeft="1dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="QTY"
                android:textColor="@color/white"
                android:textStyle="bold"

                android:background="@color/merahmuda"
                android:layout_marginLeft="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/merahmuda"
                android:layout_marginLeft="1dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/idlistperdana"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="999999"
                android:background="@drawable/background"
                android:textColor="@color/black"

                android:gravity="center"
                android:autoSizeTextType="uniform"
                />


            <TextView
                android:id="@+id/namalistperdana"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Perdana 35 GB"
                android:textColor="@color/black"
                android:background="@drawable/background"
                android:layout_marginLeft="1dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/qtylistperdana"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/black"
                android:background="@drawable/background"
                android:layout_marginLeft="1dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/hargalistperdana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50000"
                android:textColor="@color/black"
                android:background="@drawable/background"
                android:layout_marginLeft="1dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView

                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tanggal_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama outlet"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="@color/merahtua"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Nama Sales"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView

                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/namasales_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123213 - 123321"

                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Nama Item"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView

                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/namaitem_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123213 - 123321"

                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/kotak_transparan_merah"
            android:padding="5dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView

                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="- Qty Awal"
                    android:textStyle="bold|italic"
                    android:textSize="15dp"
                    android:textColor="@color/hijausedeng"
                    />

                <TextView

                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold|italic"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/qtyawal_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123213"
                    android:textStyle="bold|italic"
                    android:gravity="center"
                    android:textColor="@color/hijausedeng"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView

                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="- Qty"
                    android:textStyle="bold|italic"
                    android:textSize="15dp"
                    android:textColor="@color/merah"
                    />

                <TextView

                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold|italic"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/qty_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123213"

                    android:textStyle="bold|italic"
                    android:gravity="center"
                    android:textColor="@color/merah"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView

                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="- Qty Akhir"
                    android:textStyle="bold|italic"
                    android:textSize="15dp"
                    android:textColor="@color/navy"
                    />

                <TextView

                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold|italic"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/qtyakhir_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123213"
                    android:textStyle="bold|italic"
                    android:gravity="center"
                    android:textColor="@color/navy"/>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Bulk"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView

                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/bulk_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123213 - 123321"

                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


















