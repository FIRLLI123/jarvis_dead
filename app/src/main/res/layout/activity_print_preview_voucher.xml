<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Ubah Tanggal dan Outlet jika ingin mencetak penjualan yg berbeda"
        android:layout_marginLeft="5dp"
        android:textSize="10dp"
        android:textStyle="italic"
        android:textColor="@color/merah"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal     :"
            android:textColor="@color/black"
            android:layout_marginLeft="7dp"
            />

        <TextView
            android:id="@+id/tanggalinputperdana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19/10/2021"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">
        <EditText
            android:id="@+id/idoutletinputperdana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="240000123456"
            android:inputType="number"
            android:textSize="12dp"
            android:ems="7"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cari ID"
            android:id="@+id/cariid"/>

        <TextView
            android:id="@+id/namaoutletinputperdana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="family cell"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/namasalesinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nama sales"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/abu"
        android:layout_gravity="top"
        />

    <Button
        android:id="@+id/testprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="print"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"/>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="REKA MITRAYASA KOMUNIKATAMA"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Jl. Raya Cileungsi-Jonggol"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="085288844555"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/namalistperdana"
                    android:layout_width="130dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:text="PRODUK"
                    android:layout_marginLeft="13dp"
                    android:gravity="left"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qtylistperdana"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="QTY"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="left"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/hargalistperdana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HARGA"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="left"
                    android:textStyle="bold"/>


            </LinearLayout>


            <view
                android:id="@+id/listBayar"
                class="android.support.v7.app.AlertController$RecycleListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/testTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="total" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TERIMA KASIH" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>