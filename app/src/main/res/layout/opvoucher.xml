<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                tools:context=".MainActivity"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Nama Sales"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:visibility="gone"/>





                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:visibility="gone">



                    <TextView
                        android:text="Nama user"
                        android:textSize="14dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/namauser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:enabled="false"
                        android:inputType="textPersonName"
                        android:text=""
                        android:layout_weight="1"
                        android:editable="false"
                        />
                </LinearLayout>


                <TextView
                    android:id="@+id/tanggalinputperdana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="19/10/2021"
                    />

                <TextView
                    android:id="@+id/jaminput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="09:00"
                    />

                <TextView
                    android:id="@+id/idoutletinputperdana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="idoutlet"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/namasalesinputperdana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="nama sales"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/namaoutletinputperdana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="nama sales"
                    android:visibility="gone"
                    />



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INPUT Voucher OP Zero"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/custom22"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="7dp"
                        android:background="@drawable/custom22">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*Kuantiti"
                                android:textColor="@color/black"
                                android:layout_marginRight="70dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*ID Item Voucher (Yang ingin di ACT)"
                                android:textColor="@color/black" />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:foregroundGravity="top"
                            android:weightSum="3">

                            <EditText
                                android:id="@+id/opkuantiti"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background"
                                android:focusable="true"
                                android:gravity="top"
                                android:hint="KUANTITI"
                                android:inputType="text"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textSize="13dp"
                                android:layout_marginRight="40dp"/>

                            <EditText
                                android:id="@+id/idbarang"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background"
                                android:focusable="true"
                                android:gravity="top"
                                android:hint="ID"
                                android:inputType="text"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                            <Button
                                android:id="@+id/cariid"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:text="CARI ID"
                                android:textSize="10dp"
                                android:textColor="@color/white"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/custom2"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Item"
                            android:textColor="@color/black"
                            />

                        <EditText
                            android:id="@+id/namabarang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background"
                            android:gravity="top"
                            android:hint="Nama Item"
                            android:focusable="false"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="7dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pembayaran VIA :"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioGroup
                                android:id="@+id/rr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <RadioButton
                                    android:id="@+id/buka"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Buku Pintar"
                                    android:textSize="11dp"
                                    android:shadowColor="@color/hijau"
                                    android:textColorLink="@color/hijau"
                                    android:textColorHighlight="@color/hijau"/>

                                <RadioButton
                                    android:id="@+id/tutup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Manual"
                                    android:textSize="11dp"
                                    android:shadowColor="@color/hijau"
                                    android:textColorLink="@color/hijau"
                                    android:textColorHighlight="@color/merah"/>


                            </RadioGroup>


                            <EditText
                                android:id="@+id/via"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="8"
                                android:visibility="gone"/>

                        </LinearLayout>


                    </LinearLayout>





                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="TOTAL KUANTITI:            "
                        android:textSize="15dp"
                        android:textStyle="bold|italic"/>


                    <TextView
                        android:id="@+id/total"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:textStyle="bold|italic"/>




                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:visibility="gone"
                    />




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/btninput"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:ellipsize="marquee"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:text="Tambah"
                        android:background="@drawable/custom4"/>

                    <EditText
                        android:id="@+id/iddelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:layout_marginLeft="30dp"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btndelete"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:ellipsize="marquee"
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:text="HAPUS"
                        android:background="@drawable/custom4"
                        android:layout_marginLeft="10dp"/>



                    <Button
                        android:id="@+id/btnrefresh"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:ellipsize="marquee"
                        android:textSize="10dp"
                        android:textColorLink="@color/black"
                        android:text="REFRESH"
                        android:textColor="@color/white"
                        android:background="@drawable/custom4"
                        android:layout_marginLeft="10dp"/>


                    w


                </LinearLayout>

            </LinearLayout>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="#F6F6F6">

                    <ListView
                        android:id="@+id/listinputperdana"
                        android:layout_width="match_parent"
                        android:layout_height="300dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>

    </ScrollView>


</LinearLayout>