<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Awal"
    android:background="@color/merahmudah2"
    android:orientation="vertical">





    <LinearLayout
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/navy_bottom_round"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:gravity="top"
                >

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgbarang"
                        android:layout_width="90dp"
                        android:layout_height="87dp"
                        android:src="@drawable/noimage"
                        android:layout_gravity="bottom"
                        app:civ_border_color="#DFBBC4"
                        app:civ_border_width="2dp"
                        android:paddingBottom="7dp"
                        android:paddingTop="0dp"
                        android:layout_marginLeft="1dp"
                        />

                    <ImageView
                        android:id="@+id/imgbarang"
                        android:layout_width="80dp"
                        android:layout_height="65dp"
                        android:src="@drawable/userabsen2"
                        android:layout_gravity="bottom"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="1dp"
                        android:visibility="gone"
                        />



                </LinearLayout>






            </LinearLayout>

            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/namakaryawan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:background="@drawable/bulat_transparan_putih"

                    >

                    <ImageView

                        android:layout_marginRight="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:background="@drawable/browser"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JOIN DATE"
                        android:textSize="8dp"
                        android:layout_marginBottom="1dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="11dp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:background="@drawable/bulat_transparan_putih"

                    >

                    <ImageView

                        android:layout_marginRight="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:background="@drawable/browser"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ID KARYAWAN"
                        android:textSize="8dp"
                        android:layout_marginBottom="1dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="11dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:background="@drawable/bulat_transparan_putih"

                    >

                    <ImageView

                        android:layout_marginRight="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:background="@drawable/browser"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JABATAN"
                        android:textSize="8dp"
                        android:layout_marginBottom="1dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">



                <TextView
                    android:id="@+id/join"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="10dp"
                    android:textColor="@color/merahmudah2"/>

                <TextView
                    android:id="@+id/idkar"
                    android:gravity="center"
                    android:layout_marginLeft="11dp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="10dp"
                    android:textColor="@color/merahmudah2"/>





                <TextView
                    android:id="@+id/posisi"
                    android:gravity="center"
                    android:layout_marginLeft="11dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="10dp"
                    android:textColor="@color/merahmudah2"/>





            </LinearLayout>





        </LinearLayout>









    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bulat_transparan_navy"

        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DOKUMENTASI OUTLET"
            android:textSize="15dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>








    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:visibility="gone"/>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:visibility="visible"
            android:divider="?android:dividerHorizontal"
            android:showDividers="middle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >








            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:divider="?android:dividerVertical"
                android:showDividers="middle"
                android:layout_marginTop="10dp">



                <LinearLayout
                    android:id="@+id/input_non"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">



                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/input_pengambilan"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="2dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Input Outlet Non Digipos"
                        android:textColor="@color/white"
                        android:layout_marginTop="3dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/riwayat_non"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">



                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/sum_dokumentasi"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="2dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riwayat"
                        android:textColor="@color/white"
                        android:layout_marginTop="3dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </LinearLayout>






            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:divider="?android:dividerVertical"
                android:showDividers="middle"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:id="@+id/input_digi"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">



                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/input_pengambilan"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="2dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Input Outlet Digipos"
                        android:textColor="@color/white"
                        android:layout_marginTop="3dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/riwayat_digi"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">



                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/sum_dokumentasi"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="2dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riwayat"
                        android:textColor="@color/white"
                        android:layout_marginTop="3dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </LinearLayout>










            </LinearLayout>














        </LinearLayout>






    </ScrollView>




</LinearLayout>