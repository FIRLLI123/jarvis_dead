<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TesCoding"
    android:orientation="vertical"
    android:background="#F3F3F3">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=" Silahkan pilih item"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>



            <TextView
                android:id="@+id/namasaleslistsum2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=" Silahkan pilih item mu"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"/>














    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal :"
            android:textSize="30dp"
            android:textColor="@color/black"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022/1/6"
            android:id="@+id/tanggal"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Sales :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:visibility="gone"/>








        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CETAK"
            android:id="@+id/cetak"
            android:background="@drawable/custom3"
            android:visibility="gone"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Outlet"
        android:id="@+id/namaoutletlist"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Outlet"
        android:id="@+id/idoutletlist"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="STOK ITEM SAAT INI"
        android:id="@+id/sumitem"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@drawable/menuawal2"
        android:visibility="gone"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">



        <TextView
            android:id="@+id/tanggal_awal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2023/11/01"
            android:textSize="15dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <android.support.v7.widget.CardView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#EFEDED">

            <LinearLayout
                android:id="@+id/klik_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="@drawable/bulat_transparan_putih"

                >

                <ImageView

                    android:layout_marginRight="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/date2"/>

                <TextView
                    android:id="@+id/tanggalsampai"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2023/12/10"
                    android:textSize="15dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#EAD5D5"
            android:layout_marginLeft="9dp">

            <LinearLayout
                android:id="@+id/cari_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="@drawable/bulat_transparan_putih"

                >

                <ImageView

                    android:layout_marginRight="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/search"/>



            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:divider="?android:dividerVertical"
        android:showDividers="middle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone">



        <LinearLayout
            android:id="@+id/perdana"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            >






            <TextView
                android:id="@+id/t_perdana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perdana"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"/>

            <View
                android:id="@+id/perdana_v"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/voucher"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">



            <TextView
                android:id="@+id/t_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher"
                android:textColor="@color/navy"
                android:layout_marginTop="3dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <View
                android:id="@+id/voucher_v"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/view_line_dotted_putih"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/namagudang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUDANG PERDANA"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/merahmudah2"
        android:layout_marginLeft="1dp"
        android:gravity="center"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">




        <TextView
            android:id="@+id/namasalesforward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"/>


        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:id="@+id/nama_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/bulat_transparan_putih"
                >

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Item :"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/namabarang"
                    android:textSize="15dp"
                    android:ems="10"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:imeOptions="actionSend"
                    android:background="@drawable/backgroundkotakhitam"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginLeft="9dp">

            <LinearLayout
                android:id="@+id/caridatabarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/bulat_transparan_putih"

                >

                <ImageView

                    android:layout_marginRight="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_width="22dp"
                    android:layout_height="21dp"
                    android:background="@drawable/search"/>



            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/namaitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="namaitem"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/stok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stok"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="harga"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:visibility="gone"
        >


        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="Code"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/navy"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:visibility="gone"/>




        <TextView
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:text="Nama Item"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/navy"
            android:layout_marginLeft="1dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STOK"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/navy"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:layout_marginRight="2dp"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="10dp">


        <ListView
            android:id="@+id/listsum2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.v7.widget.CardView>



</LinearLayout>