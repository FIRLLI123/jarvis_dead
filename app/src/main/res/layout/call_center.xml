<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    android:background="@color/merahmudah2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="14dp"
            android:layout_gravity="center"
            android:background="@drawable/navy_bottom_round"
            >






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="90dp">


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgbarang"
                        android:layout_width="90dp"
                        android:layout_height="87dp"
                        android:src="@drawable/erika"
                        android:layout_gravity="bottom"
                        app:civ_border_color="#DFBBC4"
                        app:civ_border_width="2dp"
                        android:paddingBottom="7dp"
                        android:paddingTop="0dp"
                        android:layout_marginLeft="1dp"
                        />

                    <ImageView
                        android:id="@+id/imgbarang"
                        android:layout_width="80dp"
                        android:layout_height="65dp"
                        android:src="@drawable/userabsen2"
                        android:layout_gravity="bottom"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="1dp"
                        android:visibility="gone"
                        />



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/merahmudah2"
                        android:text="Call Center"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/abu"
                        android:text="Admin Support"/>



                    <LinearLayout

                        android:id="@+id/call"
                        android:layout_marginTop="10dp"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/abuabu2"
                        android:padding="5dp"
                        >



                        <TextView
                            android:id="@+id/jam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Erika Sari - 0852-5554-4888"
                            android:textSize="19dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_gravity="center"/>


                    </LinearLayout>







                </LinearLayout>















            </LinearLayout>






        </LinearLayout>





    </LinearLayout>









</LinearLayout>





